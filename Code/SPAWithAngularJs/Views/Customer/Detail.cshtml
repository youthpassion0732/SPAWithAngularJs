                                    <span class="ttext-info fa fa-envelope fa-fw"></span>
                                </li>
                                <li>
                                    <span class="text-info fa fa-university fa-fw"></span>
                                    {{customer.State}}
                                </li>
                                <li>
                                    <span class="text-info fa fa-envelope fa-fw"></span>
                                </li>
                                <li>
                                    <span class="text-info fa fa-envelope fa-fw"></span>
                                </li>
                                <li>
                                    <span class="text-info fa fa-home fa-fw"></span>
