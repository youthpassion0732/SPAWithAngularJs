

<style>
    .gridStyle {
        border: 1px solid rgb(212,212,212);
        width: 1000px;
        height: 400px;
    }

    .ng-scope a {
        padding-left: 10px;
    }

    #loading {
        width: 100%;
        height: 100%;
        top: 100px;
        position: fixed;
        display: block;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
        text-align: center;
    }

    #loading-image {
        position: absolute;
        top: 155px;
        z-index: 100;
        left: 390px;
    }
</style>

<div class="header">
    <h1 class="page-title">Customers</h1>
    <ul class="breadcrumb">
        <li><a href="#Customer/Add">New Customer</a> </li>
        <li class="active">Customer List</li>
    </ul>
</div>

<alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>

<div id="loading" ng-hide="gridLoaded">
    <img id="loading-image" src="~/loading.gif" alt="Loading..." />
</div>

